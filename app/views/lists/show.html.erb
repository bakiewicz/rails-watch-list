<div class="banner-list" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<% @list.bookmarks.each do |bookmark| %>
  <%= bookmark.movie.title %>
  <%= bookmark.comment %>
  <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete } %>
<% end %>

<%= link_to "New Bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary' %>
